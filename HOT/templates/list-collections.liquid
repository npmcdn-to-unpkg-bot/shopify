              {% endfor %}
            </ul>
          </div>
          <h3 class="banner__title head--45 font--akzidenzcds-regular">{{ collec_all_title_2 }}</h3>
        </div>
      </div>
      <div class="col-md-4 col-xs-12">
        <div class="banner sr banner__style-2 flex col">
          <div class="menu--cat">
            {% assign collec_all_title_3 = settings['collec_all_title_3'] %}
